<script>
    $("#image-input").on("change", function() {
        var file = this.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $("#image-preview").attr("src", e.target.result);
            };
            reader.readAsDataURL(file);
        }
    });

    var addform = $("#addVendorForm");
    addform.on("submit", submitFormHandler);


    function submitFormHandler(e) {
        e.preventDefault();

        var formData = new FormData(addform[0]);
        console.log(formData);
        $.ajax({
                type: "POST",
                url: "/admin/vendor/add",
                data: formData,
                processData: false,
                contentType: false
            })
            .done((res) => {
                iziToast.success({
                    title: "Success",
                    message: res.message,
                    position: "topRight",
                });
                setTimeout(function() {
                    location.reload();
                }, 1000);
            })
            .fail(function(xhr, status, error) {
                iziToast.error({
                    title: "Error",
                    message: xhr.responseText,
                    position: "topRight",
                });
            });
    }
</script>

<script>
    $(document).ready(function() {
        // Function to perform search
        $(".search").on("keyup", function() {
            var searchText = $(this).val().toLowerCase();

            $("#userTableBody tr").each(function() {
                var name = $(this).find(".name").text()
                    .toLowerCase();
                var email = $(this).find(".email")
                    .text().toLowerCase();

                if (name.includes(searchText) || email
                    .includes(searchText)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });

            // Show/hide no results found message
            if ($("#userTableBody tr:visible").length > 0) {
                $(".noresult").hide();
            } else {
                $(".noresult").show();
            }
        });
    });
</script>

<script type="text/javascript">
    $(function() {
        $('#daterangeInput').daterangepicker({
                opens: 'left',
                locale: {
                    format: 'MM/DD/YYYY'
                }
            },
            function(start, end) {
                // Format dates for API request
                const startDate = start.format('YYYY-MM-DD');
                const endDate = end.format('YYYY-MM-DD');

                // Make API request to fetch users based on date range
                axios
                    .get(
                        `/venders?startDate=${startDate}&endDate=${endDate}`
                    )
                    .then((response) => {
                        const users = response.data.users;
                        updateTable(users);
                    })
                    .catch((error) => {
                        console.error('Error fetching users:',
                            error);
                    });
            }
        );
    });


    $(document).ready(function() {
        // Handle status toggle button click
        $('.toggle-btn').on('click', function() {
            var userId = $(this).data('id');
            var button = $(this);
            var newStatus;

            // Toggle classes and determine new status
            if (button.hasClass('actives')) {
                button.removeClass('actives').addClass(
                    'inactives').text('Inactive');
                newStatus = 'Inactive';
            } else {
                button.removeClass('inactives').addClass(
                    'actives').text('Active');
                newStatus = 'Active';
            }

            // Send AJAX request to update status
            $.ajax({
                url: '/admin/vendor/status_change',
                method: 'POST',
                data: {
                    userId: userId,
                    status: newStatus
                },
                success: function(response) {
                    if (response.status == 200) {
                        // Revert button status if update fails
                        if (newStatus ===
                            'Active') {
                            button.removeClass(
                                    'actives')
                                .addClass(
                                    'inactives')
                                .text('Inactive');
                        } else {
                            button.removeClass(
                                    'inactives')
                                .addClass('actives')
                                .text('Active');
                        }

                        iziToast.success({
                            title: "Success",
                            message: response
                                .message,
                            position: "topRight",
                        });
                        setTimeout(function() {
                            location
                            .reload();
                        }, 1000);
                    }
                },
                error: function(xhr, status, error) {
                    // Revert button status if error occurs
                    if (newStatus === 'Active') {
                        button.removeClass(
                            'actives').addClass(
                            'inactives').text(
                            'Inactive');
                    } else {
                        button.removeClass(
                                'inactives')
                            .addClass('actives')
                            .text('Active');
                    }
                    iziToast.error({
                        title: "Error",
                        message: xhr
                            .responseText,
                        position: "topRight",
                    });
                }
            });
        });


        // Handle "Ban this vendor" button click
        $('.ban-item-btn').on('click', function() {
            var userId = $(this).data('id');
            var currentStatusButton = $(this).closest('td')
                .find('.toggle-btn');

            // Open the confirmation modal
            $('#banVendorModal').modal('show');

            // Handle "Yes, ban this" button click in modal
            $('#confirm-ban-btn').off('click').on('click',
                function() {
                    // AJAX POST request to ban the user
                    $.ajax({
                            type: "POST",
                            url: "/admin/vendor/status_change",
                            data: {
                                userId: userId
                            } // Data to send in the request body,
                        })
                        .done((res) => {
                            currentStatusButton
                                .removeClass(
                                    'actives')
                                .addClass('banned')
                                .text('Banned')
                                .prop('disabled',
                                    true);
                            $('#banVendorModal')
                                .modal('hide');
                            iziToast.success({
                                title: "Success",
                                message: res
                                    .message,
                                position: "topRight",
                            });
                            setTimeout(function() {
                                location
                                    .reload();
                            }, 1000);

                        })
                        .fail(function(xhr, status, error) {
                            iziToast.error({
                                title: "Error",
                                message: xhr
                                    .responseText,
                                position: "topRight",
                            });
                        });
                });

        });
    });
</script>

